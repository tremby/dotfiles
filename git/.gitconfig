[user]
	name = Bart Nagel
	email = bart@tremby.net
[color]
	ui = auto
[merge]
	tool = vimdiff
[rebase]
	autosquash = true
[alias]
	graph1 = log --graph --decorate --all --format=format:'%C(yellow)%h%C(reset) %<|(66,mtrunc)%s %C(cyan)%an%C(reset) %C(magenta)%ar%C(reset)%C(auto)%d%C(reset)'
	graph2 = log --graph --decorate --all --format=format:'%C(yellow)%h%C(reset) %C(green)%aD%C(reset) %C(magenta)%ar%C(reset)%C(auto)%d%C(reset)%n       %C(yellow)`-%C(reset) %w(76,0,10)%s %w(0)% %C(cyan)%an%C(reset)'
	graphw = log --graph --decorate --all --format=format:'%C(yellow)%h%C(reset) %w(140,0,10)%s%C(reset) %C(cyan)%an%C(reset) %C(magenta)%ar%C(reset)%C(auto)%d%C(reset)'
	graph = !"git graph1"
	logg = log --graph --decorate --all --oneline
	releaselog = !"git shortlog --no-merges $(git tag | tail -n 1)..HEAD"
	unwrap = !"pandoc -f gfm -t gfm --wrap=none"
	showm = show --no-patch --format=format:%B
	logm = log --no-patch --format=format:%B
	puf = push --force-with-lease --force-if-includes
[push]
	default = upstream
[tag]
	sort = version:refname
[versionsort]
	prereleaseSuffix = -rc
[include]
	# For credentials etc
	path = ~/.gitconfig.local
[init]
	templateDir = ~/.config/git/template.git
[core]
	commentChar = ";"
	attributesFile = ~/.config/git/attributes
[diff "json-pretty-if-oneline"]
	textconv = [ "$(grep --count --max-count=2 ^ "$1")" -lt 2 ] && jq --sort-keys . "$1" || cat
[rerere]
	enabled = true
[branch]
	sort = -committerdate
[column]
	ui = auto
